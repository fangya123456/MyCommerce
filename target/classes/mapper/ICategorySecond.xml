<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fy.commerce.mapper.ICategorySecondMapper">

    <resultMap id="CategorySecondResultMap" type="com.fy.commerce.model.CategorySecond">
        <id column="csid" property="csid" jdbcType="INTEGER"/>
        <result column="csname" property="csname" jdbcType="VARCHAR"/>
       <!-- <result column="cid" property="cid" jdbcType="cid"/>-->
    </resultMap>

    <select id="selectAllCategorySecondInfo" resultMap="CategorySecondResultMap">
        select * from categorysecond
    </select>

    <select id="selectCategorySecondInfoById" parameterType="int" resultMap="CategorySecondResultMap">
        select * from categorysecond where csid = #{csid}
    </select>

    <select id="selectCategorySecondInfoByExample" parameterType="com.fy.commerce.model.CategorySecond">
        select * from categorysecond
        <where>
            <choose>
                <when test="csid !=null">
                    csid = #{csid}
                </when>
                <when test="csname != null">
                    csname = #{csname}
                </when>
            </choose>
        </where>
    </select>

    <select id="selectCategorySecondInfoByForeignKey" parameterType="int" resultMap="CategorySecondResultMap">
        select csid, csname from categorysecond where cid = #{cid}
    </select>

    <insert id="insertCategorySecondInfo" parameterType="com.fy.commerce.model.CategorySecond" useGeneratedKeys="true" keyProperty="csid">
        insert into categorysecond (csname, cid) values(#{csname}, #{cid})
    </insert>

    <update id="updateCategorySecondInfo" parameterType="int" >
        update categorysecond
         <set>
             <if test="csname != null">
                 csname = #{csname}
             </if>
         </set>
        where csid = #{csid}
    </update>

    <delete id="deleteCategorySecondInfoById" parameterType="int">
        delete from categorysecond where csid = #{csid}
    </delete>

</mapper>